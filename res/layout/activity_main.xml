    <TextView
        android:id="@+id/tvCopyright"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_text" 
        android:layout_gravity="bottom|center_horizontal" />
    
</FrameLayout>

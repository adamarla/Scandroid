<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/tvCopyright"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_text" 
        android:layout_gravity="bottom|center_horizontal" />
    
    <TextView
        android:id="@+id/tvStart1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center_horizontal"
        android:paddingTop="76dp"
        android:text="@string/start_label_text1" />
    
    <TextView
        android:id="@+id/tvStart2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center_horizontal"
        android:paddingTop="96dp"
        android:text="@string/start_label_text2" />
    
    <ImageButton
        android:id="@+id/btnStart"
        android:layout_width="102dp"
        android:layout_height="102dp"
        android:layout_gravity="center"
        android:contentDescription="@string/start_button"
        android:onClick="initiateCameraActivity"
        android:scaleType="fitXY"
        android:src="@drawable/ic_launcher" />

</FrameLayout>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <!-- Switch
        android:id="@+id/tglPayloadType"
        android:layout_width="wrap_content"        
        android:layout_height="40dp"
        android:layout_gravity="top|right"
        android:text="@string/payload_type"
        android:textOff="@string/payload_type_typesetting"
        android:textOn="@string/payload_type_grading" /-->
        
    <TextView
        android:id="@+id/tvGreeting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|right"        
        android:text=""
        android:textAppearance="?android:attr/textAppearanceMedium" />


    <ImageButton
        android:id="@+id/btnStart"
        android:layout_width="102dp"
        android:layout_height="102dp"
        android:layout_gravity="center"
        android:contentDescription="@string/start_button"
        android:onClick="initiateCameraActivity"
        android:scaleType="fitXY"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/tvStart1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="96dp"
        android:text="@string/start_label_text1" />
    
    <TextView
        android:id="@+id/tvStart2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="76dp"
        android:text="@string/start_label_text2" />
    
    <TextView
        android:id="@+id/tvCopyright"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_text" 
        android:layout_gravity="bottom|center_horizontal" />

</FrameLayout>

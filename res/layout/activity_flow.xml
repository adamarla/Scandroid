<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/com.gradians.collect"
    android:id="@+id/rlFlowActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FlowActivity" >
    
    <com.gradians.collect.FlowViewPager
        android:id="@+id/vpPreview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"/>
    
    <LinearLayout
        android:id="@+id/llTopBar"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentTop="true">
        
        <TextView
            android:id="@+id/tvName"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:typeface="sans"
            android:background="@color/gray"
            android:textColor="@color/white"
            android:gravity="center"/>
        
        <TextView
            android:id="@+id/tvMarks"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:background="@color/gray"
            android:textColor="@color/white"
            android:gravity="center" />
            
        <ImageButton
            android:id="@+id/btnMin"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:contentDescription="@string/capture_button"
            android:onClick="showHide"
            android:background="@color/blue"
            android:gravity="center"
            android:src="@android:drawable/ic_menu_more"/>
        
    </LinearLayout>
    
    <android.support.v4.view.ViewPager
        android:id="@+id/vpFeedback"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="2dp"
        android:layout_below="@id/llTopBar"
        android:background="@color/gray"
        android:gravity="center"/>
    
    <com.viewpagerindicator.CirclePageIndicator
        android:id="@+id/circlesFdbk"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_alignTop="@id/vpFeedback"
        android:layout_marginTop="4dp"
        app:fillColor="@color/orange"
        android:background="@null"/>
        
    <android.support.v4.view.ViewPager
        android:id="@+id/vpHints"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="64dp"
        android:visibility="invisible"
        android:background="@color/gray"
        android:gravity="center"/>
            
    <com.viewpagerindicator.CirclePageIndicator
        android:id="@+id/circlesHints"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_alignTop="@id/vpHints"
        android:layout_marginTop="4dp"
        app:fillColor="@color/orange"
        android:background="@null"/>

    <LinearLayout
        android:id="@+id/llInstruction"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="64dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:baselineAligned="false"
        android:background="@drawable/gray_background">
        
        <TextView
            android:id="@+id/tvInstruction1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="12sp"         
            android:textColor="@color/white"
            android:text="@string/instruction1"/>
        
        <TextView
            android:id="@+id/tvInstruction2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:text="@string/instruction2"/>
    
        <TextView
            android:id="@+id/tvInstruction3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:text="@string/instruction3"/>
	</LinearLayout>
    
    <LinearLayout
        android:id="@+id/llBtnBar"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="60dp"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp">
        
        <Button
            android:id="@+id/btnSelfChk"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp" 
            android:layout_marginRight="1dp"
            android:paddingTop="7dp"
            android:contentDescription="@string/capture_button"
            android:textColor="@color/white"
            android:textSize="@dimen/small_font_size" 
            android:background="@drawable/btn_selector"
            android:gravity="center"
            android:onClick="selfCheck"
            android:drawableTop="@drawable/ic_action_mic"
            android:drawablePadding="-7dp"/>

        <TextView
            android:id="@+id/btnBuyAns"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp" 
            android:layout_marginRight="1dp"
            android:paddingTop="5dp"
            android:textColor="@color/white"
            android:text="@string/buy_answer_text"
            android:textSize="@dimen/small_font_size"
            android:background="@drawable/btn_selector"
            android:gravity="center"
            android:clickable="true"
            android:onClick="purchase"/>
        	        
        <TextView
            android:id="@+id/btnBuySoln"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp" 
            android:layout_marginRight="1dp"
            android:paddingTop="5dp"
            android:textColor="@color/white"
            android:text="@string/buy_soln_text"
            android:textSize="@dimen/small_font_size" 
            android:contentDescription="@string/capture_button"
            android:background="@drawable/btn_selector"
            android:gravity="center"
            android:clickable="true"
            android:onClick="purchase"/>
                    
        <Button
            android:id="@+id/btnCamera" 
            android:layout_weight="1" 
            android:layout_width="0dp" 
            android:layout_height="match_parent" 
            android:layout_marginLeft="1dp" 
            android:layout_marginRight="2dp" 
            android:paddingTop="7dp"            
            android:textColor="@color/white" 
            android:text="@string/activate_text" 
            android:textSize="@dimen/small_font_size" 
            android:contentDescription="@string/capture_button" 
            android:background="@drawable/btn_selector" 
            android:gravity="center" 
            android:onClick="activateCamera"
            android:drawableTop="@android:drawable/ic_menu_camera" 
            android:drawablePadding="-7dp"/>
        
    </LinearLayout>
	
</RelativeLayout>

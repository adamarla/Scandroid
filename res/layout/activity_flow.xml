<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rlFlowActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FlowActivity" >
    
    <com.gradians.collect.FlowViewPager 
        android:id="@+id/vpPreview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </com.gradians.collect.FlowViewPager>

    <LinearLayout
        android:id="@+id/llBtnBar"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp" >
        
	    <TextView
	        android:id="@+id/btnName"
	        android:layout_weight="1"
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:background="@drawable/button"	        
	        android:gravity="center"/>
	    
        <ImageButton 
            android:id="@+id/btnLeft"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:contentDescription="@string/zoom_button"
            android:onClick="page"           
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:gravity="center"
            android:background="@drawable/button"
            android:src="@drawable/ic_action_back"/>        
            
	    <ImageButton
	        android:id="@+id/btnAction"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
	        android:contentDescription="@string/action_button"
	        android:background="@drawable/button"
            android:gravity="center"
	        android:src="@drawable/ic_action_undo"
	        android:onClick="takeAction"/>    
	    
	    <ImageButton 
	        android:id="@+id/btnRight"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
	        android:contentDescription="@string/zoom_button"
	        android:onClick="page"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:gravity="center"
	        android:background="@drawable/button"
	        android:src="@drawable/ic_action_forward"/>        
                       
        <ImageButton
            android:id="@+id/btnMin"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:contentDescription="@string/zoom_button"
            android:onClick="showHide"
            android:background="@drawable/button"
            android:gravity="center"
            android:src="@android:drawable/ic_menu_more"/>
        
	    </LinearLayout>    
  
    <android.support.v4.view.ViewPager
        android:id="@+id/vpFeedback"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/gray_background"/>        
    
</RelativeLayout>

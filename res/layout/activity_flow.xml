<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FlowActivity" >
    
    <ViewSwitcher 
        android:id="@+id/vsPreview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v4.view.ViewPager 
            android:id="@+id/vpPreview"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </android.support.v4.view.ViewPager>
        <ScrollView 
            android:id="@+id/svFullPreview"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <HorizontalScrollView 
                android:id="@+id/hsvFullPreview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/ivFullPreview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="false"
                    android:scaleType="center"
                    android:contentDescription="@string/title_activity_preview"/>
            </HorizontalScrollView>    
        </ScrollView>
    </ViewSwitcher>
    
    <ImageButton
        android:id="@+id/btnZoom"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:contentDescription="@string/zoom_button"
        android:onClick="adjustZoom"
        android:src="@android:drawable/ic_menu_zoom" />
            
    <ImageButton
        android:id="@+id/btnAction1"
        android:layout_alignLeft="@id/btnZoom"
        android:layout_below="@id/btnZoom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:contentDescription="@string/action_button"
        android:onClick="takeAction1" />
    
    <ImageButton
        android:id="@+id/btnAction2"
        android:layout_alignLeft="@id/btnZoom"
        android:layout_below="@id/btnAction1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:contentDescription="@string/action_button"
        android:onClick="takeAction2" />
        
</RelativeLayout>

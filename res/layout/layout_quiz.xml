<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:descendantFocusability="blocksDescendants" >
        
    <RelativeLayout 
        android:id="@+id/llTextBtns"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal">

	    <TextView
	        android:id="@+id/tvQuiz"
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_centerVertical="true"
	        android:textSize="20sp"
	        android:padding="10dp"
	        android:layout_marginLeft="10dp" />
	    
	    <TextView
            android:id="@+id/tvTotal"
	        android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:textColor="#efefef"
            android:padding="0dp"/>
        <TextView
            android:id="@+id/tvAttempted"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="#ababab"
            android:padding="0dp"/>
        <TextView
            android:id="@+id/tvGraded"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:textColor="#676767"
            android:padding="0dp"/>
	    	    
	</RelativeLayout>
    
    <LinearLayout 
        android:id="@+id/llProgress"
        android:layout_height="2dp"
        android:layout_width="match_parent"
        android:orientation="horizontal">

        <View 
            android:id="@+id/vGraded"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:contentDescription="@string/zoom_button"
            android:background="#676767"/>
        
        <View 
            android:id="@+id/vAttempted"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:contentDescription="@string/zoom_button"
            android:background="#ababab"/>
        
        <View 
            android:id="@+id/vDownloaded"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:contentDescription="@string/zoom_button"
            android:background="#efefef"/>
        
    </LinearLayout>
          
</LinearLayout>
